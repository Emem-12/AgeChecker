<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/menu1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/profile"
        app:layout_constraintStart_toEndOf="@id/menu"
        app:layout_constraintTop_toTopOf="@id/menu" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="@id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#612AC1"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/profile"
        app:layout_constraintStart_toStartOf="@id/menu"
        app:layout_constraintTop_toBottomOf="@id/menu"/>

    <TextView
        android:id="@+id/date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Your Date of Birth"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/card1"
        app:layout_constraintTop_toTopOf="@id/card1" />

    <Button
        android:id="@+id/date_ofbirth"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#fff"
        app:layout_constraintEnd_toEndOf="@id/card1"
        app:layout_constraintStart_toStartOf="@id/card1"
        app:layout_constraintTop_toBottomOf="@id/date_of_birth"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="02-12-1990"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/date_ofbirth"
        app:layout_constraintStart_toStartOf="@id/date_ofbirth"
        app:layout_constraintTop_toTopOf="@id/date_ofbirth" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/calender"
        android:background="@drawable/round_image"
        app:layout_constraintBottom_toBottomOf="@id/date_ofbirth"
        app:layout_constraintEnd_toEndOf="@id/date_ofbirth"
        app:layout_constraintTop_toTopOf="@id/date_ofbirth" />


    <TextView
        android:id="@+id/today_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/today_date"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/date_ofbirth"
        app:layout_constraintTop_toBottomOf="@id/date_ofbirth" />

    <Button
        android:id="@+id/todays_date"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:backgroundTint="#fff"
        app:layout_constraintEnd_toEndOf="@id/date_ofbirth"
        app:layout_constraintStart_toStartOf="@id/today_date"
        app:layout_constraintTop_toBottomOf="@id/today_date"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="26-02-2022"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/todays_date"
        app:layout_constraintStart_toStartOf="@id/todays_date"
        app:layout_constraintTop_toTopOf="@id/todays_date" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/calender"
        app:layout_constraintBottom_toBottomOf="@id/todays_date"
        app:layout_constraintEnd_toEndOf="@id/todays_date"
        app:layout_constraintTop_toTopOf="@id/todays_date" />


    <Button
        android:id="@+id/calculateAge"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#BA58CA"
        app:layout_constraintEnd_toEndOf="@id/todays_date"
        app:layout_constraintStart_toStartOf="@id/todays_date"
        app:layout_constraintTop_toBottomOf="@id/todays_date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate my age"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/calculateAge"
        app:layout_constraintEnd_toEndOf="@id/calculateAge"
        app:layout_constraintStart_toStartOf="@id/calculateAge"
        app:layout_constraintTop_toTopOf="@id/calculateAge" />

    <TextView
        android:id="@+id/check_others"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Check other"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card1"
        app:layout_constraintTop_toBottomOf="@id/card1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_others"
        tools:listitem="@layout/other_view"
        />


</androidx.constraintlayout.widget.ConstraintLayout>